<div>
  <div>
    <h1>
      People Playing in Your Area
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new sport
    </h2>

    <form action="/insert_user_sport" method="post">
      <button>
        Create sport
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          Username
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_user_sports.each do |a_sport| %>
      <tr>

        <td>
          <%= a_sport.user_id %>
        </td>

        <td>
          <%= a_sport.sport_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_sport.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_sport.updated_at) %> ago
        </td>

        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
