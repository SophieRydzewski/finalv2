<div>
  <div>
    <h1>
      User sport #<%= @the_user_sport.id %> details
    </h1>

    <div>
      <div>
        <a href="/user_sports">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_user_sport/<%= @the_user_sport.id %>">
          Delete user sport
        </a>
      </div>
    </div>

    <dl>
      <dt>
        User
      </dt>
      <dd>
        <%= @the_user_sport.user_id %>
      </dd>

      <dt>
        Sport
      </dt>
      <dd>
        <%= @the_user_sport.sport_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_user_sport.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_user_sport.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit user sport
    </h2>

    <form action="/modify_user_sport/<%= @the_user_sport.id %>"  method="post" >
      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id" value="<%= @the_user_sport.user_id %>">
      </div>

      <div>
        <label for="sport_id_box">
          Sport
        </label>

        <input type="text" id="sport_id_box" name="query_sport_id" value="<%= @the_user_sport.sport_id %>">
      </div>

      <button>
        Update user sport
      </button>
    </form>
  </div>
</div>

<hr>
