<div>
  <div>
    <h1>
      List of all user sports
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new user sport
    </h2>

    <form action="/insert_user_sport" method="post">
      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id">
      </div>

      <div>
        <label for="sport_id_box">
          Sport
        </label>

        <input type="text" id="sport_id_box" name="query_sport_id">
      </div>

      <button>
        Create user sport
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Sport
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_user_sports.each do |a_user_sport| %>
      <tr>
        <td>
          <%= a_user_sport.id %>
        </td>

        <td>
          <%= a_user_sport.user_id %>
        </td>

        <td>
          <%= a_user_sport.sport_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_user_sport.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_user_sport.updated_at) %> ago
        </td>

        <td>
          <a href="/user_sports/<%= a_user_sport.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
